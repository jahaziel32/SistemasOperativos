<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sistemasoperativos.alarma.registro.eingv.uabc.sistemasoperativos.Activity_tres">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:text="La descripcion de la version del Sistema Operativo"
                android:id="@+id/descrip"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="128dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.09"
                android:editable="false"
                android:scrollbars="vertical"
                android:gravity="center|fill" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de creacion:"
                android:id="@+id/textView2"
                android:layout_marginTop="45dp"
                android:layout_below="@+id/descrip"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/fechCreacion"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de descontinuacion:"
                android:id="@+id/textView4"
                android:layout_below="@+id/fechCreacion"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/fechDescon"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/fechCreacion"
                android:layout_alignStart="@+id/fechCreacion"
                android:layout_marginTop="21dp"
                android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </ScrollView>



</RelativeLayout>
